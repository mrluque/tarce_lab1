<!DOCTYPE html>
<html>
  <head>
    <h1>Base de datos</h1>
    <link rel='stylesheet' href='/stylesheets/style_index.css' />
    
  </head>
  
  <h2>Información de los cursos ofertados para nivel intermedio</h2>
    <table class = "tableInfoCourses">
      <tr>
        <th>Nombre del curso</th>
        <th>Horario</th>
        <th>Número de semanas</th>
        <th>Precio (€/semana)</th>
      </tr>      
      <% results.forEach(function(r) { %>
        <%if(r.grupo =='intermedio'){ %>
      <tr>
        <td><%= r.curso %></td>
        <td><%= r.horario %></td>
        <td><%= r.semanas %></td>
        <td><%= r.precio%></td>
      </tr> 
      <%} %>           
      <%}); %>
    </table>    
  </body>
</html>